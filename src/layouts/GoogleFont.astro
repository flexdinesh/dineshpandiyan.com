<Fragment>
  <link
    rel="preload"
    href="/fonts/inconsolata/inconsolata-v31-latin-regular.woff2"
    as="font"
    type="font/woff2"
    crossorigin="crossorigin"
  />
  <link
    rel="preload"
    href="/fonts/inconsolata/inconsolata-v31-latin-500.woff2"
    as="font"
    type="font/woff2"
    crossorigin="crossorigin"
  />
  <link
    rel="preload"
    href="/fonts/inconsolata/inconsolata-v31-latin-700.woff2"
    as="font"
    type="font/woff2"
    crossorigin="crossorigin"
  />
  <link
    rel="preload"
    href="/fonts/nunito/nunito-v25-latin-700.woff2"
    as="font"
    type="font/woff2"
    crossorigin="crossorigin"
  />
  <link
    rel="preload"
    href="/fonts/nunito/nunito-v25-latin-800.woff2"
    as="font"
    type="font/woff2"
    crossorigin="crossorigin"
  />
  <style is:inline>
    /* inconsolata-regular - latin */
    @font-face {
      font-family: 'Inconsolata';
      font-style: normal;
      font-weight: 400;
      src: local(''),
          url('/fonts/inconsolata/inconsolata-v31-latin-regular.woff2') format('woff2'),
          url('/fonts/inconsolata/inconsolata-v31-latin-regular.woff') format('woff');
    }


    /* inconsolata-500 - latin */
    @font-face {
      font-family: 'Inconsolata';
      font-style: normal;
      font-weight: 500;
      src: local(''),
          url('/fonts/inconsolata/inconsolata-v31-latin-500.woff2') format('woff2'),
          url('/fonts/inconsolata/inconsolata-v31-latin-500.woff') format('woff');
    }

    /* inconsolata-700 - latin */
    @font-face {
      font-family: 'Inconsolata';
      font-style: normal;
      font-weight: 700;
      src: local(''),
          url('/fonts/inconsolata/inconsolata-v31-latin-700.woff2') format('woff2'),
          url('/fonts/inconsolata/inconsolata-v31-latin-700.woff') format('woff');
    }

    /* nunito-700 - latin */
    @font-face {
      font-family: 'Nunito';
      font-style: normal;
      font-weight: 700;
      src: local(''),
          url('/fonts/nunito/nunito-v25-latin-700.woff2') format('woff2'),
          url('/fonts/nunito/nunito-v25-latin-700.woff') format('woff');
    }

    /* nunito-800 - latin */
    @font-face {
      font-family: 'Nunito';
      font-style: normal;
      font-weight: 800;
      src: local(''),
          url('/fonts/nunito/nunito-v25-latin-800.woff2') format('woff2'),
          url('/fonts/nunito/nunito-v25-latin-800.woff') format('woff');
    }

  </style>
</Fragment>

